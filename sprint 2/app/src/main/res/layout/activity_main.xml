<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#46a3a8ff"
    android:id="@+id/rl">
    <FrameLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/editText"
            android:layout_marginTop="80dp"
            android:hint="  Email address or Phone number"
            android:background="#ffffff" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal|top"
            android:hint="  Password"
            android:layout_marginTop="130dp"
            android:background="#ffffff" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:id="@+id/button"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="#383893" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="create new account"
            android:id="@+id/button2"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:background="#36d1ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="110dp"
            android:text="Forgotten Password  Help Centre"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|bottom" />


    </FrameLayout>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="375dp"
        android:id="@+id/frameLayout2"

        android:background="#fdfcff">






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English(UK)"
            android:id="@+id/textView9"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"
            android:textColor="#2e1dff"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="മലയാളം"
            android:id="@+id/textView10"
            android:layout_marginLeft="200dp"
            android:textColor="#2e1dff"
            android:layout_below="@+id/textView9"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      हिन्दी"
            android:layout_marginLeft="50dp"
            android:id="@+id/textView11"
            android:layout_marginTop="25dp"
            android:textColor="#2e1dff"
            android:textSize="15dp"
            android:layout_alignTop="@+id/frameLayout2"
            android:layout_alignRight="@+id/frameLayout2"
            android:layout_alignEnd="@+id/frameLayout2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    मराठी"
            android:id="@+id/textView12"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="25dp"
            android:textColor="#2e1dff"
            android:textSize="15dp"
            android:layout_below="@+id/textView10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      বাংলা"
            android:layout_marginLeft="50dp"
            android:textSize="15dp"
            android:layout_marginTop="45dp"
            android:id="@+id/textView13"
            android:textColor="#2e1dff"
            android:layout_alignBottom="@+id/frameLayout2"
            android:layout_toLeftOf="@+id/textView12"
            android:layout_toStartOf="@+id/textView12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   తెలుగు"
            android:textSize="15dp"
            android:id="@+id/textView14"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="45dp"
            android:textColor="#2e1dff"
            android:layout_alignBottom="@+id/frameLayout2"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="facebook@2016"
            android:layout_marginTop="35dp"
            android:id="@+id/textView2"
            android:textColor="#2e1dff"
            android:textSize="15dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center" />

    </FrameLayout>

</RelativeLayout>

